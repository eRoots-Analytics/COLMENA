{
    "id": {
        "value": "AgentControl"
    },
    "dockerContextDefinitions": [
        {
            "id": "all_global",
            "imageId": "all_global:latest"
        }
    ],
    "kpis": [],
    "dockerRoleDefinitions": [
        {
            "id": "Distributed_MPC",
            "imageId": "distributed_mpc:latest",
            "hardwareRequirements": [
                "AREA"
            ],
            "kpis": [
                {
                    "query": "min(min_over_time(agentcontrol_frequency[30s])) < 0.9985"
                },
                {
                    "query": "max(max_over_time(agentcontrol_frequency[30s])) < 1.0015"
                }
            ]
        },
        {
            "id": "AutomaticGenerationControl",
            "imageId": "automaticgenerationcontrol:latest",
            "hardwareRequirements": [
                "GENERATOR"
            ],
            "kpis": [
                {
                    "query": "max(max_over_time(agentcontrol_frequency[22s])) > 1.002"
                }
            ]
        },
        {
            "id": "GridFormingRole",
            "imageId": "gridformingrole:latest",
            "hardwareRequirements": [
                "CONVERTER"
            ],
            "kpis": [
                {
                    "query": "max(max_over_time(agentcontrol_frequency[30s])) < 1.0005"
                },
                {
                    "query": "max(deriv(agentcontrol_frequency[30s])) > 1"
                }
            ]
        },
        {
            "id": "Monitoring",
            "imageId": "monitoring:latest",
            "hardwareRequirements": [
                "GENERATOR"
            ],
            "kpis": [
                {
                    "query": "max(max_over_time(agentcontrol_frequency[30s])) < -1"
                }
            ]
        }
    ]
}